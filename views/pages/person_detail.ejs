<!DOCTYPE html>
<html>
<head>
  <!-- passed data: {item} -->
  <%- include('../partials/head') %>
  <link rel="stylesheet" href="/css/tree.css">
  <title>detail</title>
</head>
<body>
  <!-- navigator -->
  <%- include('../partials/navigator') %>

  <!-- main content -->
  <div id="node_detail" class="container">
    <button type="button" id="edit_detail" class="btn btn-primary btn-sm edit_btn">edit</button>
    <% for(let prop in item){ %>
      <% if(prop === "_id"){ %>
        <input type="hidden" name="_id" value="<%= item[prop] %>"><br>
      <% }else{ %>
        <p><strong><%= prop %>: </strong><%= item[prop] %></p>
      <% } %>
    <% } %>
  </div>
  
  <!-- footer -->
  <%- include('../partials/footer') %>
  <!-- /container -->
  <%- include('../partials/mask/cover') %>
  <!-- global scripts -->
  <%- include('../partials/globalScripts') %>

  <script src="/js/detail_page.js"></script>
</body>
</html>