<!DOCTYPE html>
<!--
  passed data:
  {mate_id, kind, children}
-->
<html>
<head>
  <%- include('../partials/head') %>
  <title>new <%= kind %></title>
</head>
<body>
  <!-- navigator -->
  <%- include('../partials/navigator') %>

  <!-- main content -->
    <% if(kind === "mate"){ %>
      <form action="/tree/add_mate" method="post">
        <div>name:</div>
        <input type="text" name="name" required><br>
        <div>birth:</div>
        <input type="date" name="birth"><br>
        <div>email:</div>
        <input type="email" name="email"><br>
        <input type="hidden" name="mate" value="<%= mate_id %>">
        <input type="hidden" name="children" value="<%= children %>">
        <input type="submit" value="submit">
      </form>
    <% }else if(kind === "root"){ %>
      <form action="/tree/add_root" method="post">
        <div>name:</div>
        <input type="text" name="name" required><br>
        <div>birth:</div>
        <input type="date" name="birth"><br>
        <div>email:</div>
        <input type="email" name="email"><br>
        <input type="submit" value="submit">
      </form>
    <% }else{ %>
      <form action="/tree/add_child" method="post">
        <div>name:</div>
        <input type="text" name="name" required><br>
        <div>birth:</div>
        <input type="date" name="birth"><br>
        <div>email:</div>
        <input type="email" name="email"><br>
        <input type="hidden" name="parents" value="<%= parent_id %>">
        <input type="submit" value="submit">
      </form>
    <% } %>
  
  <!-- footer -->
  <%- include('../partials/footer') %>
  <!-- /container -->
  <%- include('../partials/mask/cover') %>
  <!-- global scripts -->
  <%- include('../partials/globalScripts') %>
</body>
</html>