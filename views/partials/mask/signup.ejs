<form id="signup_form" class="form-horizontal form-signup">
  <h2 class="text-center">Sign Up to Start!</h2>
  <div class="form-group">
    <label for="family name" class="control-label col-sm-3">Family name</label>
    <div class="col-sm-9">
      <input class="form-control" type="text" name="name" placeholder="ex: Chino's family" maxlength="50" />
    </div>
  </div>
  <div class="form-group">
    <label for="user name" class="control-label col-sm-3">User name</label>
    <div class="col-sm-9">
      <input class="form-control" type="text" name="usr" placeholder="Must be unique" maxlength="20" />
    </div>
  </div>
  <div class="form-group">
    <label for="password" class="control-label col-sm-3">Password</label>
    <div class="col-sm-9">
      <input class="form-control" type="password" name="pw" placeholder="Password" maxlength="20" />
    </div>
  </div>
  <div class="form-group">
    <label for="password" class="control-label col-sm-3">Retype Password</label>
    <div class="col-sm-9">
      <input class="form-control" style="height: 50px;" type="password" name="re_pw" placeholder="Retype Password" maxlength="15" />
    </div>
  </div>
  <div id="signup_msg" style="color: #ff6666"></div>
  <div class="center-block form-btn-row">
    <div class="col col-sm-12">
      <button class="btn btn-primary btn-block text-lg" type="button" onclick="signup_action()">Submit</button><br>
    </div>
  </div>
  <div class="col-sm-6 col-sm-offset-3 text-center">
    <a id="switch-signin" href="#">I have account, go to Sign In!</a>
  </div>
</form>
<script src="/js/signup_page.js"></script>