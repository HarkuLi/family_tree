          <div class="page-header">
            <h1 class="text-center">Mail Groups</h1>
          </div>
          <div class="btn-group pull-right" role="group" aria-label="write mail">
            <button type="button" class="btn btn-primary">New Mail Group</button>
          </div>

        <% if(list.length === 0) { %>
          <div class="center-block">
            <h3>There is no group now.</h3>
          </div>
        <% }else{ %>
        <%   list.forEach((group) => { %>
        
          <h3><%= group.name %>
            <a href="#" class="icon-tool-btn"><i class="fa fa-plus" title="Add Email Address to This Group"></i></a>
            <a href="#" class="icon-tool-btn"><i class="fa fa-pencil" title="Modify Group Default Setting"></i></a>
            <a href="#" class="icon-tool-btn"><i class="fa fa-trash" title="Delete This Group"></i></a>
          </h3>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email Address</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
            <% if(group.memberlist.length === 0) { %>
              <tr>
                <td col="4">No member in this group now.</td>
              </tr>  
            <% }else{ %>
              <% group.memberlist.forEach((member, idx) => {
                <tr>
                  <td><%= idx + 1 %></td>
                  <td><%= member.name %></td>
                  <td><%= member.email %></td>
                  <td><a href="#" class="icon-tool-btn"><i class="fa fa-trash" title="Remove from This Group"></i></a></td>
                </tr>  
              <% }); %>
            <% } %>
            </tbody>
          </table>
        <%   }); %>
        <% } %>
          