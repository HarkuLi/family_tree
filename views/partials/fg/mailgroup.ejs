          <div class="page-header">
            <h1 class="text-center">Mail Groups</h1>
          </div>
          <div class="btn-group pull-right" role="group" aria-label="write mail">
            <button id="add-mg" type="button" class="btn btn-primary">New Mail Group</button>
          </div>

        <% if(list.length === 0) { %>
          <div class="center-block">
            <h3 class="text-center">There is no group now.</h3>
          </div>
        <% }else{ %>
        <%   list.forEach((group) => { %>
          <div id="<%= group._id %>">
            <h3><%= group.name %>
              <a href="<%= `${group._id}/adl/add` %>" class="icon-tool-btn add-member"><i class="fa fa-plus" title="Add Email Address to This Group"></i></a>
              <a href="<%= `edit/${group._id}` %>" class="icon-tool-btn edit-group"><i class="fa fa-pencil" title="Modify Group Default Setting"></i></a>
              <a href="<%= `del/${group._id}` %>" class="icon-tool-btn delete-group"><i class="fa fa-trash" title="Delete This Group"></i></a>
            </h3>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Email Address</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
              <% if(group.memberlist.length === 0) { %>
                <tr>
                  <td colspan="4"><p class="text-center">No member in this group now.</p></td>
                </tr>  
              <% }else{ %>
                <% group.memberlist.forEach((member, idx) => { %>
                  <tr id="<%= member.mbid %>">
                    <% console.log(member) %>
                    <td><%= idx + 1 %></td>
                    <td><%= member.name %></td>
                    <td><%= member.email %></td>
                    <td><a href="#" class="icon-tool-btn delete-member"><i class="fa fa-trash" title="Remove from This Group"></i></a></td>
                  </tr>  
                <% }); %>
              <% } %>
              </tbody>
            </table>
          </div>
          <%   }); %>
          <% } %>
        
        
        <script src="/js/mailgroup_page.js"></script>